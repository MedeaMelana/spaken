<!-- corresponds to example.spaken -->

<spaken>
  <!-- id-based -->
  <theorem name="Middelloodlijn">
    <point id="p1" x="0" y="0" />
    <point id="p2" x="1" y="1" />
    <export element="l" />
    <export element="i1" />
    <export element="i2" />
    <construction>
      <circle id="c1">
        <input ref="p1" />
        <input ref="p1" />
        <input ref="p2" />
      </circle>
      <circle id="c2">
        <input ref="p2" />
        <input ref="p1" />
        <input ref="p2" />
      </circle>
      <applytheorem name="ccintersection">
        <inputs ref="c1" />  <!-- shorthand for <input> for p1,p1,p2 -->
        <inputs ref="c2" />
        <output id="i1" />
        <output id="i2" />
      </ccintersection>
    	<line id="l">
        <input ref="i1" />
        <input ref="i2" />
        <!-- line takes care of the output -->
      </line>
    </construction>
  </theorem>
</spaken>
